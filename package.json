{
  "name": "auto-cdk",
  "version": "0.0.2",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:wulfmann/cdk-express.git",
  "author": "Joe Snell <joepsnell@gmail.com>",
  "license": "MIT",
  "private": false,
  "bin": {
    "auto-cdk": "bin/auto-cdk"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.44.0",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.9",
    "@types/webpack": "^4.41.17",
    "@types/yargs": "^15.0.5",
    "aws-cdk": "1.44.0",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "scripts": {
    "build:source": "tsc",
    "build:bin": "chmod +x bin/*",
    "build": "yarn build:source && yarn build:bin",
    "watch": "tsc -w",
    "cdk": "cdk",
    "test": "jest",
    "ts-node": "ts-node",
    "lint": "tslint '{src/**/*,test/**/*}.ts'",
    "format": "prettier '{src/**/*,test/**/*}.ts'"
  },
  "dependencies": {
    "@aws-cdk/aws-apigateway": "1.44.0",
    "@aws-cdk/aws-lambda": "1.44.0",
    "@aws-cdk/core": "1.44.0",
    "arg": "^4.1.3",
    "clean-webpack-plugin": "^3.0.0",
    "webpack": "^4.43.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  },
  "files": [
    "lib/**/*",
    "cli/**/*",
    "bin/**/*"
  ]
}
